import React, { Component } from 'react'
import CMS from 'netlify-cms'
import { StyleSheetManager } from 'styled-components'

// Preview Templates
import QuotePreview from './preview-templates/QuotePreview'

//Component used to Enable netlify CMS to apply the styles added through styled-components
class CSSInjector extends Component {
  constructor(props) {
    super(props)

    this.state = {
      iframeRef: ''
    }
  }
  componentDidMount() {
    const iframe = document.querySelector('.nc-previewPane-frame')
    const iframeHeadElem = iframe.contentDocument.head
    this.setState({
      iframeRef: iframeHeadElem
    })
  }
  render() {
    return (
      <div>
        { this.state.iframeRef && (
          <StyleSheetManager target={this.state.iframeRef}>
            { this.props.children }
          </StyleSheetManager>
        )}
      </div>
    )
  }
}

CMS.registerPreviewTemplate('quotes', props => (
  <CSSInjector>
    <QuotePreview {...props} />
  </CSSInjector>
))